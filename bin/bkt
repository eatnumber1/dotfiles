#!/bin/zsh

version="v0.5.4"
architecture="$(uname -m)"

case "$OSTYPE" in
  linux-gnu*)
    platform="linux-gnu"
    vendor="unknown"
    ;;
  darwin*)
    platform="darwin"
    vendor="apple"
    ;;
  *)
    echo "Unknown platform $OSTYPE" >&2
    exit 1
esac

exec "${0:A:h}/bkt.${version}.${architecture}-${vendor}-${platform}" "$@"
